<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".Fragment.ScreenThemeFragment">

    <RelativeLayout
        android:id="@+id/statusbar"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="Screen Theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/premium"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/crown"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>
    </RelativeLayout>

    <HorizontalScrollView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/scrollable"
        android:layout_below="@id/statusbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearscreen"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/statusbar"
            android:layout_marginTop="-4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/buttonscreen"
                android:textSize="@dimen/_20sdp"
                android:text="All"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:id="@+id/btn2"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/button_bg_color"
                android:textSize="@dimen/_20sdp"
                android:text="Neon"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:id="@+id/btn3"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/button_bg_color"
                android:textSize="@dimen/_20sdp"
                android:text="Halloween"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:id="@+id/btn4"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/button_bg_color"
                android:textSize="@dimen/_20sdp"
                android:text="Marvel"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:id="@+id/btn5"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/button_bg_color"
                android:textSize="@dimen/_20sdp"
                android:text="Astronomy"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_30sdp"/>
            <TextView
                android:id="@+id/btn6"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:background="@drawable/button_bg_color"
                android:textSize="@dimen/_20sdp"
                android:text="Nature"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_30sdp"/>

        </LinearLayout>

    </HorizontalScrollView>





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@id/scrollable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>