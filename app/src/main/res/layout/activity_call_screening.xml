<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CallScreeningActivity">


    <RelativeLayout
        android:id="@+id/statusbar"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="@dimen/_15sdp"
            android:id="@+id/back"
            android:background="@drawable/back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>

        <ImageView
            android:id="@+id/premium"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/crown" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/realsave1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_60sdp">

        <androidx.cardview.widget.CardView
            android:foreground="@drawable/profile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="@dimen/_100sdp">


            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/circleimg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/screenimg1" />
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <TextView
        android:id="@+id/savetext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/realsave1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppinsregular"
        android:text="Ralph Edwards"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/savetext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/savetext1"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppinsregular"
        android:text="(671) 555-0110"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />


    <RelativeLayout
        android:layout_marginBottom="@dimen/_60sdp"
        android:layout_above="@id/btnsavee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/btncall1"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            android:src="@drawable/savecall1" />

        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/btncall2"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_40sdp"
            android:src="@drawable/savecall2" />



    </RelativeLayout>

    <ImageView
        android:layout_marginBottom="@dimen/_20sdp"
        android:id="@+id/btnsavee"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/save"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_50sdp"/>

</RelativeLayout>