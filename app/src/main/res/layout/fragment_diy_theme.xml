<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Fragment.DiyThemeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <RelativeLayout
        android:id="@+id/statusbar"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/poppinsregular"
            android:textSize="@dimen/_20sdp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="DIY Theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/premium"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/crown"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/icon"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_below="@id/statusbar"
        android:fontFamily="@font/poppinsregular"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:text="Call icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <HorizontalScrollView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/scrollable"
        android:layout_below="@id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearscreen"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_50sdp"
            android:layout_below="@id/statusbar"
            android:layout_marginTop="-4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/call1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/call2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/call3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/call4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/call5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/call6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/call7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/call8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </HorizontalScrollView>


    <TextView
        android:id="@+id/avatar"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_below="@id/scrollable"
        android:fontFamily="@font/poppinsregular"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:text="Avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <HorizontalScrollView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/scrollable1"
        android:layout_below="@id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linearscreen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusbar"
            android:layout_marginTop="-4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatar1"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/avatar1"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/avatar2"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/avatar3"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/avatar4"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/avatar5"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/avatar6"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/avatar7"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/avatar8"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>
            <ImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/avatar9"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"/>



        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/background"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_below="@id/scrollable1"
        android:fontFamily="@font/poppinsregular"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/white"
        android:text="Background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler1"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>