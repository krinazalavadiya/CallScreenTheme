<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".premiumActivity">



    <ImageView
        android:id="@+id/imagpro"
        android:background="@drawable/bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"/>

    <RelativeLayout
        android:id="@+id/statusbar"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@id/close"
            android:layout_marginLeft="@dimen/_5sdp"
            android:src="@drawable/baseline_close_24"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:tint="@color/white" />
        <ImageView
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/crown"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/pro1"
        android:layout_below="@id/statusbar"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Call Screen Pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/pro2"
        android:layout_below="@id/pro1"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Unlock all screen themes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_below="@id/pro2"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Weekly themes updates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/prooo1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_below="@id/imagpro"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:src="@drawable/pro1" />

    <RadioButton
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_below="@id/imagpro"
        app:buttonTint="@color/blue"
        android:id="@+id/radiopro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/prooo2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"

        android:layout_below="@id/prooo1"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:src="@drawable/pro2" />

    <RadioButton

        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_below="@id/prooo1"
        app:buttonTint="@color/blue"
        android:id="@+id/radiopro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/prooo3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@id/prooo2"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:src="@drawable/pro3" />

    <RadioButton
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_below="@id/prooo2"
        app:buttonTint="@color/blue"
        android:id="@+id/radiopro3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/btncontinue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@id/prooo3"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:src="@drawable/btncontinue" />


    <TextView
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@id/btncontinue"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="@dimen/_10sdp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:text="Cancel anytime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>